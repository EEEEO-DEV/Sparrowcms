{% extends "base.html.twig" %}
{% block content %}
  <h1>新建内容</h1>
  <form class="stack" method="post" action="/admin/posts">
    <input type="hidden" name="_token" value="{{ csrf_token }}">
    <label>类型</label>
    <select name="type" class="input"><option value="post">文章</option><option value="page">独立页面</option></select>
    <input class="input" type="text" name="title" placeholder="标题" required>
    <input class="input" type="text" name="slug" placeholder="自定义链接（默认基于标题生成）">
    <textarea class="input" name="content" placeholder="支持 HTML（可扩展 Markdown 渲染插件）" rows="12" required></textarea>
    <input class="input" type="text" name="categories" placeholder="分类(可选)，多个用逗号分隔">
    <input class="input" type="text" name="tags" placeholder="标签(可选)，多个用逗号分隔">
    <button class="btn" type="submit">发布</button>
  </form>
{% endblock %}
